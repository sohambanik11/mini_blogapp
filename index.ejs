<!DOCTYPE html>
<html>
<head>
    <title>My Blog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<header>
    <h1>My Blog</h1>
    <a href="/new">Create New Post</a>
</header>
<div class="container">
    <% posts.forEach(post => { %>
        <div>
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
            <a href="/edit/<%= post.id %>">Edit</a> |
            <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </div>
        <hr>
    <% }) %>
</div>
</body>
</html>
